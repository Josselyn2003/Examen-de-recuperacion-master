<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Órdenes de trabajo</h2>
    <a href="/orden_trabajo/agregar" class="btn btn-primary btn-sm">
      <i class="bi bi-plus-circle"></i> Nueva orden
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body table-responsive">
      <table class="table table-striped table-hover mb-0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Fecha</th>
            <th>Horas</th>
            <th>Costo total</th>
            <th class="text-right">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#if lista.length}}
            {{#each lista}}
              <tr>
                <td>{{id_orden_trabajo}}</td>
                <td>{{descripcion}}</td>
                <td>{{fecha}}</td>
                <td>{{horas_trabajo}}</td>
                <td>{{costo_total}}</td>
                <td class="text-right">
                  <a href="/orden_trabajo/editar/{{id_orden_trabajo}}" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-pencil"></i> Editar
                  </a>
                  <a href="/orden_trabajo/eliminar/{{id_orden_trabajo}}"
                     class="btn btn-sm btn-outline-danger"
                     onclick="return confirm('¿Seguro que deseas eliminar esta orden?');">
                    <i class="bi bi-trash"></i> Eliminar
                  </a>
                </td>
              </tr>
            {{/each}}
          {{else}}
            <tr>
              <td colspan="6" class="text-center text-muted">
                No hay órdenes registradas.
              </td>
            </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>
