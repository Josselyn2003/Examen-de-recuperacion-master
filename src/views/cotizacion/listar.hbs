<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Listado de cotizaciones</h2>
    <a href="/cotizacion/agregar" class="btn btn-primary btn-sm">
      <i class="bi bi-plus-circle"></i> Nueva cotización
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body table-responsive">
      <table class="table table-striped table-hover mb-0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Estado</th>
            <th class="text-right">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#if lista.length}}
            {{#each lista}}
              <tr>
                <td>{{id_cotizacion}}</td>
                <td>{{fecha_cotizacion}}</td>
                <td>{{total}}</td>
                <td>{{estado_cotizacion}}</td>
                <td class="text-right">
                  <a href="/cotizacion/editar/{{id_cotizacion}}" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-pencil"></i> Editar
                  </a>
                  <a href="/cotizacion/eliminar/{{id_cotizacion}}"
                     class="btn btn-sm btn-outline-danger"
                     onclick="return confirm('¿Seguro que deseas eliminar esta cotización?');">
                    <i class="bi bi-trash"></i> Eliminar
                  </a>
                </td>
              </tr>
            {{/each}}
          {{else}}
            <tr>
              <td colspan="5" class="text-center text-muted">
                No hay cotizaciones registradas.
              </td>
            </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>
