<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Editar cotización</h2>
    <a href="/cotizacion/listar" class="btn btn-outline-secondary btn-sm">
      <i class="bi bi-arrow-left"></i> Volver al listado
    </a>
  </div>

  {{#each lista}}
  <div class="card shadow-sm">
    <div class="card-body">
      <form action="/cotizacion/editar/{{id_cotizacion}}" method="POST">
        <div class="form-row">
          <div class="form-group col-md-4">
            <label for="fecha_cotizacion">Fecha de cotización</label>
            <input type="date"
                   id="fecha_cotizacion"
                   name="fecha_cotizacion"
                   class="form-control"
                   value="{{fecha_cotizacion}}"
                   required>
          </div>

          <div class="form-group col-md-4">
            <label for="total">Total</label>
            <input type="number"
                   step="0.01"
                   id="total"
                   name="total"
                   class="form-control"
                   value="{{total}}"
                   required>
          </div>

          <div class="form-group col-md-4">
            <label for="estado_cotizacion">Estado</label>
            <select id="estado_cotizacion"
                    name="estado_cotizacion"
                    class="form-control"
                    required>
              <option value="{{estado_cotizacion}}" selected>{{estado_cotizacion}}</option>
              <option value="Pendiente">Pendiente</option>
              <option value="Aprobada">Aprobada</option>
              <option value="Rechazada">Rechazada</option>
            </select>
          </div>
        </div>

        <button type="submit" class="btn btn-primary">
          <i class="bi bi-save"></i> Actualizar
        </button>
      </form>
    </div>
  </div>
  {{/each}}
</div>
