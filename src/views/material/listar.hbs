<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Listado de materiales</h2>
    <a href="/material/agregar" class="btn btn-primary btn-sm">
      <i class="bi bi-plus-circle"></i> Nuevo material
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body table-responsive">
      <table class="table table-striped table-hover mb-0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Cantidad</th>
            <th>Costo unitario</th>
            <th class="text-right">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#if lista.length}}
            {{#each lista}}
              <tr>
                <td>{{id_material}}</td>
                <td>{{nombre_material}}</td>
                <td>{{cantidad}}</td>
                <td>{{costo_unitario}}</td>
                <td class="text-right">
                  <a href="/material/editar/{{id_material}}" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-pencil"></i> Editar
                  </a>
                  <a href="/material/eliminar/{{id_material}}"
                     class="btn btn-sm btn-outline-danger"
                     onclick="return confirm('Â¿Seguro que deseas eliminar este material?');">
                    <i class="bi bi-trash"></i> Eliminar
                  </a>
                </td>
              </tr>
            {{/each}}
          {{else}}
            <tr>
              <td colspan="5" class="text-center text-muted">
                No hay materiales registrados.
              </td>
            </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>
