<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
  <div class="card shadow-sm" style="max-width: 520px; width: 100%;">
    <div class="card-body">
      <h3 class="text-center mb-3">Registro de usuario</h3>
      <p class="text-muted text-center mb-4">
        Crea una cuenta para acceder al sistema.
      </p>

      <form action="/registro" method="POST">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="username">Usuario</label>
            <input type="text"
                   id="username"
                   name="username"
                   class="form-control"
                   required>
          </div>

          <div class="form-group col-md-6">
            <label for="password">Contraseña</label>
            <input type="password"
                   id="password"
                   name="password"
                   class="form-control"
                   required>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="nameClient">Nombres</label>
            <input type="text"
                   id="nameClient"
                   name="nameClient"
                   class="form-control"
                   required>
          </div>

          <div class="form-group col-md-6">
            <label for="lastNameClient">Apellidos</label>
            <input type="text"
                   id="lastNameClient"
                   name="lastNameClient"
                   class="form-control"
                   required>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="typeIdentificationClient">Tipo de identificación</label>
            <select id="typeIdentificationClient"
                    name="typeIdentificationClient"
                    class="form-control"
                    required>
              <option value="">Seleccione...</option>
              <option value="CEDULA">Cédula</option>
              <option value="RUC">RUC</option>
              <option value="PASAPORTE">Pasaporte</option>
            </select>
          </div>

          <div class="form-group col-md-6">
            <label for="identificationCardClient">Número de identificación</label>
            <input type="text"
                   id="identificationCardClient"
                   name="identificationCardClient"
                   class="form-control"
                   required>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="emailClient">Correo electrónico</label>
            <input type="email"
                   id="emailClient"
                   name="emailClient"
                   class="form-control"
                   required>
          </div>

          <div class="form-group col-md-6">
            <label for="phoneClient">Teléfono</label>
            <input type="text"
                   id="phoneClient"
                   name="phoneClient"
                   class="form-control"
                   required>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="nameTypePerson">Tipo de persona</label>
            <select id="nameTypePerson"
                    name="nameTypePerson"
                    class="form-control"
                    required>
              <option value="">Seleccione...</option>
              <option value="1">Natural</option>
              <option value="2">Jurídica</option>
            </select>
          </div>

          <div class="form-group col-md-6">
            <label for="nameGener">Género</label>
            <select id="nameGener"
                    name="nameGener"
                    class="form-control"
                    required>
              <option value="">Seleccione...</option>
              <option value="1">Femenino</option>
              <option value="2">Masculino</option>
              <option value="3">Otro</option>
            </select>
          </div>
        </div>

        <input type="hidden" name="idUsuarios" value="">

        <button type="submit" class="btn btn-primary btn-block mt-2">
          <i class="bi bi-person-plus"></i> Registrarse
        </button>

        <div class="text-center mt-3">
          <small class="text-muted">
            ¿Ya tienes cuenta?
            <a href="/login">Inicia sesión</a>
          </small>
        </div>
      </form>
    </div>
  </div>
</div>
